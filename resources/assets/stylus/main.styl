azul = #4DC8E9
gris = #F2F2F2
ccc = #CCCCCC
body
	background white
	font-family 'quicksandregular'
	.navbar-default
		background-color transparent
		border-color transparent
		height 70px
		text-align center
		.navbar-header
			height 100%
			text-align center
			.navbar-brand
				color white
				display inline-block
				font-size 4em
				height 100%
				margin 0 auto
				padding 0
				position relative
				width 100%
				z-index 2
	.hello-block
		background transparent url(../../images/hello-blueterrier-image-background.jpg) no-repeat center top
		background-size cover
		color white
		height 400px
		margin-top -90px
		padding-top 100px
		position relative
		text-align center
		h2
			font-style italic
			font-size 2.8em
			margin-bottom 20px
		.arrow.icon-c
			bottom 10px
			font-size 2em
			margin-left -15px
			position absolute
	.form
		padding-top 50px
		.form-group
			input.form-control
				background-color gris
				border none
			textarea
				background-color gris
				border-color transparent
				border-radius 4px
				padding 10px
				resize none
				width 100%
			&.error
				input
				textarea
					border 1px solid red
		.select
			position relative
			border 1px solid azul
			width 100%
			overflow hidden
			background-color azul
			border-radius 4px

		.select:before
			content ''
			position absolute
			right 10px
			top 12px
			width 0
			height 0
			border-style solid
			border-width 7px 5px 0 5px
			border-color white transparent transparent transparent
			z-index 5
			pointer-events none

		.select select
			padding 5px 8px
			width 100%
			border none
			box-shadow none
			background-color transparent
			background-image none
			appearance none
			color white

		.btn.btn-primary
			background-color azul
			border-color azul
			font-size 1.2em
			width 100%
	.clients
		background-color gris
		margin 30px 0
		text-align center
		h2
			color azul
			font-style italic
		.clients-carousel
			margin 30px 0
			.item
				height auto
				overflow hidden
				text-align center
				span
					color ccc
					display inline-block
					font-size 12em
					text-align center
				a
					display block
					margin 20px auto 0 auto
					background-color azul
					border 1px solid azul
					font-size 1.2em
					width 90%
			.slick-next
			.slick-prev
				position absolute
				top 90px
				border none
				color azul
				background-color transparent
			.slick-prev
				left 0
				transform rotate(90deg)
				z-index 2
			.slick-next
				right 0
				transform rotate(-90deg)
	.contact-info
		text-align center
		color azul
		.logo-bluterrier
			font-size 5em
			margin-bottom 20px
		a
			color azul
			text-decoration underline
	.social
		text-align center
		color white
		background-color azul
		padding 30px 0
		.logo-lettering
			font-size 7em
		ul
			text-align center
			padding 30px 0 0
			li
				display inline-block
				margin-left 10px
				a
					color white
					font-size 3em
					&:hover
						text-decoration none
@media screen and (min-width: 480px)
	body
		.navbar-default
			.navbar-header
				.navbar-brand
					font-size 6em
		.hello-block
			background-position center -40px
			height 600px
			padding-top 125px
			h2
				font-style italic
				font-size 3.6em
				margin-bottom 45px
			p
				font-size 1.6em
			.arrow.icon-c
				bottom 50px
				font-size 3em
				margin-left -23px
		.form
			width 460px
			.btn.btn-primary
				font-size 1.4em
				padding 10px 0
		.clients
			padding-top 10px
			h2
				margin 30px 0
			.clients-carousel
				margin 50px 0
				.item
					span
						font-size 16em
					a
						font-size 1.2em
						width 70%
				.slick-prev
					left 10%
				.slick-next
					right 10%
		.contact-info
			padding 30px 0
			.logo-bluterrier
				font-size 6em
			p
				font-size 1.2em
		.social
			padding 40px 0
			.logo-lettering
				font-size 8em
			ul
				padding 40px 0 0
				li
					margin-left 15px
					a
						font-size 4em
@media screen and (min-width:768px)
	body
		.navbar-default
			.navbar-header
				width 100%
				.navbar-brand
					font-size 8em
		.form
			width 600px
		.clients
			width 100%
			p
				padding 0 10%
			.clients-carousel
				margin-top 20px
				.item
					span
						font-size 10em
				.slick-prev
					left 0
				.slick-next
					right 0
@media screen and (min-width:1000px)
	body
		.hello-block
			background-position center -40px
			height 768px
			padding-top 185px
			h2
				font-size 4.3em
				margin-bottom 55px
			p
				font-size 2em
				padding 0 15%
			.arrow.icon-c
				bottom 70px
				font-size 5em
				margin-left -36px
		.clients
			width 100%
			h2
				font-size 3em
			p
				padding 0 15%
				font-size 1.2em
			.clients-carousel
				.item
					span
						font-size 12em
		.contact-info
			padding 50px 0
			.logo-bluterrier
				font-size 6em
			p
				font-size 1.2em
		.social
			padding 50px 0
			.logo-lettering
				font-size 10em
			ul
				li
					margin-left 20px
					a
						font-size 5em